{
    "name": "axleus/axleus-pluginmanager",
    "description": "Axleus PluginManager",
    "license": "BSD-3-Clause",
    "keywords": [
        "axleus",
        "webinertia",
        "mezzio"
    ],
    "homepage": "https://github.com/axleus/axleus-pluginmanager/discussions",
    "authors": [
        {
            "name": "Joey Smith",
            "email": "jsmith@webinertia.net",
            "homepage": "https://webinertia.net/"
        }
    ],
    "suggest": {
        "laminas/laminas-component-installer" : "^3.0, required for configuration injection"
    },
    "require": {
        "php": "~8.1.0 || ~8.2.0"
    },
    "require-dev": {
    },
    "extra": {
        "laminas": {
            "config-provider": "Axleus\\PluginManager\\ConfigProvider"
        }
    },
    "autoload": {
        "psr-4": {
            "Axleus\\PluginManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AxleusTest\\PluginManagerTest\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@static-analysis",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "static-analysis": "psalm --shepherd --stats",
        "update-baseline": "psalm --update-baseline",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "laminas/laminas-component-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "platform": {
            "php": "8.1.99"
        }
    }
}
